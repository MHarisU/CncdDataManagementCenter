<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UIs.MICaseExclusionInclusionCriteriaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bluelight">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:onClick="CloseForm"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bluelight"
                    android:padding="12dp"
                    android:src="@drawable/ic_back_arrow_white" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="Myocardial Infarction Case Exclusion &amp; Inclusion Criteria"
                android:textColor="@color/White"
                android:textSize="22dp" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layoutMIExclusion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="visible"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/bluelight"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="MI Case Exclusion Criteria"
                        android:textColor="@color/White"
                        android:textSize="18dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="18sp"
                        android:text="1 -  I have had a prior cardiac event"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="18sp"
                        android:text="2 -  I have cardiogenic shock"
                        android:padding="10dp"/>




                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                android:text="If any of above is true select YES or NO"
                android:padding="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView

                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:onClick="mIExclusionYes"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bluelight"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="0sp"
                                android:background="@color/Transparent"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:text="@string/yes"
                                android:textColor="@color/white"
                                android:textSize="22sp"
                                android:textStyle="bold" />


                            <ImageView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="0dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_yes" />


                        </RelativeLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView

                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:onClick="mIExclusionNo"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bluelight"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="0sp"
                                android:background="@color/Transparent"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:text="@string/no"
                                android:textColor="@color/white"
                                android:textSize="22sp"
                                android:textStyle="bold" />


                            <ImageView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="0dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_exit_white" />


                        </RelativeLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layoutMIInclusion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="visible"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/bluelight"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="MI Case Inclusion Criteria"
                        android:textColor="@color/White"
                        android:textSize="18dp" />


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:padding="10dp"
                            android:text="1 -  This is my first ever acute myocardial infarction"
                            android:textSize="18sp" />



                        <androidx.cardview.widget.CardView
                            android:layout_alignParentEnd="true"

                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:id="@+id/firstAcuteMIEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:background="@drawable/bttn_drk_stroke"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:inputType="text"
                                android:onClick="selectYesNoNot"
                                android:padding="10dp"
                                android:text="@string/not_answered"
                                android:textColor="@color/Black80"
                                android:textSize="14sp" />

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="@font/poppins_regular"
                            android:padding="10dp"
                            android:text="2 -  I have 1 mm ST elevation in any 2 or more contiguous limb leads"
                            android:textSize="18sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_alignParentEnd="true"

                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:id="@+id/stElevationEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:background="@drawable/bttn_drk_stroke"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:inputType="text"
                                android:onClick="selectYesNoNot"
                                android:padding="10dp"
                                android:text="@string/not_answered"
                                android:textColor="@color/Black80"
                                android:textSize="14sp" />

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bttn_drk_stroke"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:background="@color/Transparent"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="start"
                                android:text="Take ECG Picture"
                                android:textColor="@color/Gray"
                                android:textSize="18sp" />


                            <ImageView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="0dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_camera" />


                        </RelativeLayout>


                    </LinearLayout>



                    <RelativeLayout

                        android:layout_marginTop="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="@font/poppins_regular"
                            android:padding="10dp"
                            android:text="3 -  I have Non-ST elevation MI with Troponin positive"
                            android:textSize="18sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_alignParentEnd="true"

                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:id="@+id/troponinPositiveEdit"

                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:background="@drawable/bttn_drk_stroke"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:inputType="text"
                                android:onClick="selectYesNoNot"
                                android:padding="10dp"
                                android:text="@string/not_answered"
                                android:textColor="@color/Black80"
                                android:textSize="14sp" />

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bttn_drk_stroke"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:background="@color/Transparent"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="start"
                                android:text="Take TP Test Picture"
                                android:textColor="@color/Gray"
                                android:textSize="18sp" />


                            <ImageView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="0dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_camera" />


                        </RelativeLayout>


                    </LinearLayout>






                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView

                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:onClick="ContinueClick"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bluelight"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="0sp"
                                android:background="@color/Transparent"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:text="@string/continue_c"
                                android:textColor="@color/white"
                                android:textSize="22sp"
                                android:textStyle="bold" />


                            <ImageView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="0dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_yes" />


                        </RelativeLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>




            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


</androidx.core.widget.NestedScrollView>